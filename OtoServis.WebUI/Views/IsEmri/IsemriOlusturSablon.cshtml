@model OtoServis.Entities.Servis.Isemri
@{
    ViewBag.Title = "İşemri Oluştur Şablon";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col">
        <h5> Araç Bilgileri</h5>
        <table class="table table-sm table-responsive">
            <tr>
                <td>Plaka</td>
                <td>@Model.Plaka</td>
            </tr>
            <tr>
                <td>Şase No</td>
                <td>@Model.SaseNo</td>
            </tr>
            <tr>
                <td>Marka / Model</td>
                <td>@Model.Model.Marka.MarkaAd / @Model.Model.ModelAd</td>
            </tr>
            <tr>
                <td>Model Yılı</td>
                <td>@Model.ModelYil</td>
            </tr>
            <tr>
                <td>Yakı Türü</td>
                <td>@Model.YakitTuru</td>
            </tr>

        </table>
    </div>
    <div class="col">
        <h5>Müşteri Bilgisi</h5>
        <table class="table table-sm table-responsive">
            <tr>
                <td>Ad-Soyad</td>
                <td>@Model.Musteri.AdSoyad</td>
            </tr>
            <tr>
                <td>Telefon</td>
                <td>@Model.Musteri.Telefon</td>
            </tr>
            <tr>
                <td>E-Posta</td>
                <td>@Model.Musteri.Eposta</td>
            </tr>
            <tr>
                <td>Adres</td>
                <td>@Model.Musteri.Adres</td>
            </tr>
        </table>
    </div>
</div>
@using (Html.BeginForm("IsemriOlusturSablon", "Isemri"))
{
    <input type="hidden" name="IsemriId" value="@Model.IsemriId" />
    <div class="row">
        <div class="col-md-3">
            <label class="fw-bold fst-italic">Geliş Tarihi</label>
            <input type="date" name="GelisTarihi" class="form-control mt-2" required />
        </div>
        <div class="col-md-1">
            <label class="fw-bold fst-italic">Araç Km</label>
            <input type="number" name="AracKm" class="form-control mt-2" required />
        </div>
        <div class="col-md-5">
            <label class="fw-bold fst-italic">Geliş Sebebi</label>
            <input type="text" name="GelisSebebi" class="form-control mt-2" required />
        </div>
        <div class="col-md-2">
            <br />
            <input type="submit" value="Kaydet" class="btn btn-primary mt-2" />
        </div>
    </div>
}

